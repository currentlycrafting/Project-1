<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project_check_1_expiration.AddItemController">
    <Label text="Add Food Item" style="-fx-font-size: 20px;" />
    <HBox spacing="10">
        <Label text="Name:" />
        <TextField fx:id="nameField" />
    </HBox>
    <HBox spacing="10">
        <Label text="Stored Date:" />
        <DatePicker fx:id="storedDatePicker" />
    </HBox>
    <HBox spacing="10">
        <Label text="Expiration Date:" />
        <DatePicker fx:id="expirationDatePicker" />
    </HBox>
    <Button text="Save" fx:id="saveButton" onAction="#onSaveButtonClick" />
</VBox>


