<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project_check_1_expiration.DisplayItemController" style="-fx-padding: 30; -fx-background-color: #f7f9fc; -fx-border-color: #d1d9e6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Title Section -->
    <Label text="Stored Food Item" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Food Item Display -->
    <Label fx:id="foodItemLabel" text="No item selected." style="-fx-font-size: 18px; -fx-text-fill: #34495e; -fx-padding: 10 20; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
</VBox>
