<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project_check_1_expiration.DisplayItemController"
      style="-fx-padding: 20; -fx-background-color: #f7f9fc; -fx-border-color: #d1d9e6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Title -->
    <Label fx:id="titleLabel" text="Display Food Items"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Label to display food items -->
    <Label fx:id="foodItemLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-wrap-text: true;"
           wrapText="true" />

    <!-- Button container -->
    <HBox alignment="CENTER" spacing="10">
        <!-- Sort Buttons -->
        <Button fx:id="sortByNameButton" text="Sort by Name" onAction="#onSortByNameButtonClick"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" />
        <Button fx:id="sortByStoredDateButton" text="Sort by Stored Date" onAction="#onSortByStoredDateButtonClick"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" />
        <Button fx:id="sortByExpirationDateButton" text="Sort by Expiration Date" onAction="#onSortByExpirationDateButtonClick"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" />
    </HBox>
</VBox>
