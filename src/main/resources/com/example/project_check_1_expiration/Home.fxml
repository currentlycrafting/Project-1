<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="30" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project_check_1_expiration.HomeController"
      style="-fx-padding: 50; -fx-background-color: #f7f9fc; -fx-border-color: #d1d9e6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Title -->
    <Label text="Welcome to Decay Calculator"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Subtitle -->
    <Label text="Manage and monitor your stored food items effortlessly"
           style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />

    <!-- Button Container -->
    <VBox alignment="CENTER" spacing="20">
        <Button text="Add Food Item" onAction="#onAddItemClick"
                style="-fx-font-size: 16px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 30; -fx-border-radius: 5; -fx-background-radius: 5;" />

        <Button text="Display Food Items" onAction="#onDisplayItemClick"
                style="-fx-font-size: 16px; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 10 30; -fx-border-radius: 5; -fx-background-radius: 5;" />

        <Button text="Search for Item" onAction="#onSearchItemClick"
                style="-fx-font-size: 16px; -fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 10 30; -fx-border-radius: 5; -fx-background-radius: 5;" />
    </VBox>
</VBox>
